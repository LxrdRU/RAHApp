<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
             android:layout_height="match_parent">

    <TextView
        android:id="@+id/cal_textView"
        android:layout_width="358dp"
        android:layout_height="61dp"
        android:layout_below="@+id/speed_textView"
        android:layout_alignParentRight="true"
        android:layout_marginStart="2dp"
        android:text="Cal. Burned: 546"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/speed_textView"
        android:layout_width="358dp"
        android:layout_height="61dp"
        android:layout_below="@+id/distance_TextView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="Avg. Speed: 23.4 m/h"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/distance_TextView"
        android:layout_width="358dp"
        android:layout_height="61dp"
        android:layout_below="@+id/time_second_textView"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:text="Distance: 24m"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/time_textView"
        android:layout_width="358dp"
        android:layout_height="61dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:text="Date: 23.11.2019   "
        android:textSize="24sp" />

    <TextView
        android:id="@+id/time_second_textView"
        android:layout_width="358dp"
        android:layout_height="61dp"
        android:layout_below="@+id/time_textView"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:text="Time: 06:30  "
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="135dp"
        android:layout_height="226dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        tools:srcCompat="@tools:sample/avatars" />
</RelativeLayout>